<div class="jumbotron">
 <h2> The easiest way to Buy or <%= link_to "Sell", new_user_registration_path %> iPhones in Ireland</h2>
</div>
<h4>Sell your iPhone:</h4>
<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary"><%= link_to "4",new_user_registration_path %></button>
  </div>
  <div class="btn-group" role="group">
  <button type="button" class="btn btn-primary"><%= link_to "4S",new_user_registration_path %></button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary"><%= link_to "5",new_user_registration_path %></button>
  </div>
</div>
<div class="btn-group btn-group-justified" role="group" aria-label="...">
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary"><%= link_to "5S",new_user_registration_path %></button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary"><%= link_to "5C",new_user_registration_path %></button>
  </div>
  <div class="btn-group" role="group">
    <button type="button" class="btn btn-primary"><%= link_to "6",new_user_registration_path %></button>
  </div>
</div>
<br>
<h4>Buy an iPhone:</h4>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing %>
          <div class="caption">
            <h3><%= listing.name %></h3>
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= "Sold by #{listing.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>    

<br>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary", data: { no_turbolink: true} %>
<% end %>